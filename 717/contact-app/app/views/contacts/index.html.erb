
<% if !current_user %>
<h2>Please <%= link_to "login", '/login' %> or <%= link_to "sign up", '/signup' %> to store or view your contacts.</h2>
<% end %>

<% if current_user %>
<h1>All Contacts</h1>

<h2>Groups</h2>
  <% Group.all.each do |group| %>
  <p><a href="/contacts?group=<%= group.name %>"><%= group.name %></a></p>
  <% end %>

<% end %>

<h2>Contacts</h2>

<% @contact.each do |contact|%>
<p><%= link_to contact.full_name, "/contacts/#{contact.id}" %></p>
<% end %>
<p><%= link_to 'Log Out', '/logout', method: 'delete' %></p>
